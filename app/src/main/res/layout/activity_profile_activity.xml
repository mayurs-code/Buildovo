<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Profile_activity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:minHeight="200dp"
                android:backgroundTint="@color/white"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/orange_yellow_gradiant"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar_profile"
                        android:layout_width="match_parent"
                        app:titleTextAppearance="@style/Buildovo_title"
                        android:layout_height="wrap_content"


                        app:title="Profile">


                    </androidx.appcompat.widget.Toolbar>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white"
                        android:elevation="20dp"
                        app:cardCornerRadius="100dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:elevation="10dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center"
                                android:text="S"

                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="80dp" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/comfortaa_bold"
                        android:gravity="center"
                        android:text="Sir User i"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.9"
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="20dp"
                android:gravity="left|center"
                android:layout_marginVertical="10dp"
                android:text="Personal Details"
                android:textColor="@color/greyPrimaryDark"
                android:textSize="15sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/blue_green"></View>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_marginHorizontal="10sp"
                android:backgroundTint="@color/white"
                android:outlineAmbientShadowColor="@color/colorPrimaryDark"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/blue_green"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.6"
                        android:fontFamily="@font/comfortaa_bold"
                        android:gravity="center"
                        android:text="Name"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/name_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="@font/comfortaa_bold"
                        android:gravity="left|center"
                        android:paddingLeft="20sp"

                        android:text="Sir User i"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.8"
                        android:background="@color/white"
                        android:padding="15dp"
                        app:srcCompat="@drawable/ic_edit" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_marginHorizontal="10sp"

                android:backgroundTint="@color/white"
                android:outlineAmbientShadowColor="@color/colorPrimaryDark"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/blue_green"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.6"
                        android:fontFamily="@font/comfortaa_bold"
                        android:gravity="center"
                        android:text="Email"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/email_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="@font/comfortaa_bold"
                        android:gravity="left|center"
                        android:paddingLeft="20sp"

                        android:text="sirUseri@buildovo.com"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.8"
                        android:background="@color/white"
                        android:padding="15dp"
                        app:srcCompat="@drawable/ic_edit" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_marginHorizontal="10sp"

                android:backgroundTint="@color/white"
                android:outlineAmbientShadowColor="@color/colorPrimaryDark"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/blue_green"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.6"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="Contact"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/number_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="@font/comfortaa_bold"
                        android:gravity="left|center"
                        android:paddingLeft="20sp"

                        android:text="xxxxxxxxxx"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.8"
                        android:background="@color/white"
                        android:padding="15dp"
                        app:srcCompat="@drawable/ic_edit" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:backgroundTint="@color/white"

                android:layout_marginHorizontal="10sp"
                app:cardElevation="10dp"
                android:outlineAmbientShadowColor="@color/colorPrimaryDark"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/blue_green"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.6"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="Address"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/address_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="@font/comfortaa_bold"
                        android:gravity="left|center"
                        android:paddingLeft="20sp"

                        android:text="Guest address"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.8"
                        android:background="@color/white"
                        android:padding="15dp"
                        app:srcCompat="@drawable/ic_edit" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>




        </LinearLayout>

    </ScrollView>



</RelativeLayout>