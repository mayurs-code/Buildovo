<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNavigationTheme" parent="Widget.Design.BottomNavigationView">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPressedHighlight">@color/colorPrimaryDark</item>

    </style>

    <style name="Header_button_style">
        <item name="android:colorPrimary">@color/BottomNavigationView</item>

    </style>

    <style name="TextAppearance">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
    </style>

    <style name="Buildovo_title" parent="TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorHighlight">?android:textColorHighlight</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorLink">?android:textColorLink</item>
        <item name="android:textSize">25sp</item>
    </style>


</resources>
